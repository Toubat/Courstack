<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_answer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:background="#E9EBEC">

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvAnswerTitle"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/ivProfile"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        tools:text="Tips about Huffman's Encoding" />

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAnswerTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/btnEdit"
        android:lines="7"
        android:textSize="15dp"
        tools:text="In the problem Huffman's algorithm is solving, the &quot;cost&quot; is measured by the total length of the encoded data, i.e., you need to minimizing \sum_i f_i l_i. In this problem, there is an additional &quot;cost&quot; you need to consider, which is the &quot;cost&quot; c_i for each word. You need to minimize \sum_i f_i c_i l_i." />

    <TextView
        android:id="@+id/updateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvQuestion"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="216dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="83dp"
        android:text="Last Update At:" />

    <TextView
        android:id="@+id/tvLastUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/updateText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        tools:text="03/20/2021" />

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="64dp"
        android:layout_height="37dp"
        android:layout_below="@+id/ivProfile"
        android:layout_alignEnd="@+id/ivProfile"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:text="Edit"
        android:textSize="8sp" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="65dp"
        android:layout_height="36dp"
        android:layout_below="@+id/btnEdit"
        android:layout_alignEnd="@+id/ivProfile"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:text="Delete"
        android:textSize="8sp" />

</RelativeLayout>